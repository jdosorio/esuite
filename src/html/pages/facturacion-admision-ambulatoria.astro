---
import Head from "@components/_head.astro"
import Footer from "@components/dashboard/_footer.astro"
import Topbar from "@components/dashboard/_topbar.astro"
import Sidenav from "@components/dashboard/_sidenav.astro"
import Scripts from "@components/_scripts.astro"

const title = "AdminLTE v4 | Facturación en admisión ambulatoria"
const path = "../../dist"
const mainPage = "facturacion-hospitalaria"
const page = "admision-ambulatoria";
---

<!doctype html>
<html lang="en">
  <!--begin::Head-->
  <head>
    <Head title={title} path={path} />
    <style>
      .form-label-sm {
        font-size: 0.8rem;
        margin-bottom: 0.1rem;
      }
      .form-control-sm, .form-select-sm {
        font-size: 0.85rem;
        padding: 0.25rem 0.5rem;
      }
      .card-body-compact {
        padding: 0.5rem;
      }
      .bottom-toolbar {
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;
        background: #f8f9fa;
        border-top: 1px solid #dee2e6;
        padding: 0.5rem;
        z-index: 1030;
        margin-left: 250px; /* Sidebar width approximation */
        transition: margin-left 0.3s ease-in-out;
      }
      body.sidebar-collapse .bottom-toolbar {
        margin-left: 4.6rem;
      }
      .app-main {
        padding-bottom: 60px; /* Space for toolbar */
      }
      .section-title {
        color: #0d6efd;
        font-size: 0.9rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
      }
    </style>
  </head>
  <!--end::Head-->
