<!doctype html>
<html lang="en">
  <!--begin::Head-->
  <head>
    <Head title={title} path={path} />
    <style>
      .form-label-sm {
        font-size: 0.8rem;
        margin-bottom: 0.1rem;
      }
      .form-control-sm, .form-select-sm {
        font-size: 0.85rem;
        padding: 0.25rem 0.5rem;
      }
      .card-body-compact {
        padding: 0.5rem;
      }
      .table-compact td, .table-compact th {
        padding: 0.25rem;
        font-size: 0.85rem;
      }
      .bottom-toolbar {
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;
        background: #f8f9fa;
        border-top: 1px solid #dee2e6;
        padding: 0.5rem;
        z-index: 1030;
        margin-left: 250px; /* Sidebar width approximation */
        transition: margin-left 0.3s ease-in-out;
      }
      body.sidebar-collapse .bottom-toolbar {
        margin-left: 4.6rem;
      }
      .app-main {
        padding-bottom: 60px; /* Space for toolbar */
      }
    </style>
  </head>
  <!--end::Head-->
  <!--begin::Body-->
  <body class="layout-fixed sidebar-expand-lg sidebar-open bg-body-tertiary">
    <!--begin::App Wrapper-->
